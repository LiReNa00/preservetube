---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

const list = Astro.url.searchParams.get("list");
const data = await (
  await fetch(`${import.meta.env.BACKEND}/playlist/${list}`)
).json();

const title = data.error ? "PreserveTube" : `${data.name} | PreserveTube`;
const keywords = data.error
  ? ""
  : `${data.name} playlist archive, ${data.channel} playlist archive, ${data.name} ${data.channel} playlist archive`;
---

<Layout
  title={title}
  description="PreserveTube is a time capsule for YouTube videos! It allows you to preserve any YouTube video, creating a snapshot that will always be available even if the original video disappears or is taken down."
  keywords={keywords}
>
  <main>
    <Header />

    {
      data.error ? (
        <div class="playlist">
          <h1>Archive not found</h1>
        </div>
      ) : (
        <div class="playlist">
          <img src={data.avatar} />
          <h1>
            <a href={data.url}>{data.channel}</a> - {data.name}
          </h1>
        </div>
      )
    }

    <div class="grid">
      {
        data.videos?.map((v) => (
          <div class="video">
            <a href={`/watch?v=${v.id}`}>
              <img
                class="thumbnail"
                src={v.thumbnail}
                onerror={`this.src='https://yewtu.be/vi/${v.id}/mqdefault.jpg'`}
              />
              <div class="title">{v.title}</div>
              <div class="date">
                Published on {v.published}
                {v.archived ? ` | Archived on ${v.archived}` : ""}
              </div>
              {v.deleted && (
                <div class="deleted">(the original video has been deleted)</div>
              )}
            </a>
          </div>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  .playlist {
    margin: 0 auto;
    display: flex;
    place-items: center;
    justify-content: center;
  }

  .playlist img {
    border-radius: 50%;
    margin-right: 10px;
    width: 48px;
    height: 48px;
    display: inline-block;
  }

  .playlist h1 {
    display: inline-block;
  }

  .verified {
    height: 20px;
    margin-left: 5px;
    content: url("https://api.iconify.design/ion/checkmark-circle.svg");
    display: inline-block;
  }

  .grid {
    margin-left: 10%;
    margin-right: 10%;
    margin-top: 1%;
    display: grid;
    grid-template-columns: repeat(3, auto);
  }

  .video {
    padding: 20px;
  }

  .video img {
    width: 100%;
    aspect-ratio: 16/9;
  }

  .title {
    margin-top: 5px;
    font-size: 20px;
    font-weight: bold;
  }

  .deleted {
    font-size: 12px;
  }
</style>
